<%=form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>

  <%=f.label "Content" %>
  <%=f.text_field :content %>

  <%=f.label "Blogger" %>
  <%=f.collection_select :blogger_id, Blogger.all, :id, :name %>

  <%=f.label "Destination" %>
  <%=f.collection_select :destination_id, Destination.all, :id, :name %>

<% end %>

<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
