<p id="notice"><%= notice %></p>
<h1> <%= @post.title %> </h1>
<p> <%= @post.content[1..-2].split('", "').join(" ")[1..-2] %> </p>
<p> <%= @post.likes %> </p>

<%= link_to 'Destination', destination_path(@post.destination) %> |
<%= link_to 'Author', blogger_path(@post.blogger) %> |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Like', post_path(@post) %>
<%=form_tag post_path(@post), method:"GET" do %>
    <% @post.likes += 1 %>
    <%= submit_tag "Like" %>
<% end %>
    

